@model api_locacao.Model.FilmeModel

@{
    Layout = null;
}

<div class="container">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-play"></i></i>&ensp;Detalhes do Filme</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>

            <div class="modal-body">

                <div>
                    <h4>@Html.DisplayFor(model => model.Titulo)</h4>
                    <hr />
                    <dl class="row">
                        <dt class = "col-sm-4">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class = "col-sm-4">
                            @Html.DisplayNameFor(model => model.ClassificacaoIndicativa)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.ClassificacaoIndicativa)
                        </dd>
                        <dt class = "col-sm-4">
                            @Html.DisplayNameFor(model => model.Lancamento)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.Lancamento)
                        </dd>
                    </dl>
                </div>

            </div>

            <div class="modal-footer">
                <a asp-controller="Filmes" asp-action="Update" asp-route-id=@Model.Id><button type="button" class="btn btn-warning">Editar</button></a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>

        </div>
    </div>
</div>